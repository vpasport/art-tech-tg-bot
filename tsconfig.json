{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@shared/*": ["shared/*"],
			"@app/*": ["app/*"],
			"@features/*": ["features/*"]
		}
	},
	"include": ["src/**/*", " global.d.ts"],
	"exclude": ["node_modules"]
}
